FROM golang:alpine

WORKDIR /app

COPY . .

ARG PORT_VAR
ARG DB_HOST
ARG DB_USER
ARG DB_PASSWORD
ARG DB_NAME
ARG DB_PORT

ENV PORT=$PORT_VAR
ENV DEV_STAGE=docker
ENV DB_HOST=$DB_HOST
ENV DB_USER=$DB_USER
ENV DB_PASSWORD=$DB_PASSWORD
ENV DB_NAME=$DB_NAME
ENV DB_PORT=$DB_PORT

RUN go mod tidy

CMD go run .
